<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    android:label="fragment_running"
    app:startDestination="@id/onboardingFragment">

    <action android:id="@+id/action_global_runningFragment"
        app:destination="@id/runningFragment"
        app:launchSingleTop="true" />

    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.example.project_cs426_runningapp.OnboardingFragment"
        android:label="fragment_onboarding"
        tools:layout="@layout/fragment_onboarding">
        <action
            android:id="@+id/action_onboardingFragment_to_logInFragment"
            app:destination="@id/logInFragment" />
        <action
            android:id="@+id/action_onboardingFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_onboardingFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.project_cs426_runningapp.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_runningFragment"
            app:destination="@id/runningFragment" />
    </fragment>
    <fragment
        android:id="@+id/runningFragment"
        android:name="com.example.project_cs426_runningapp.RunningFragment"
        android:label="fragment_running"
        tools:layout="@layout/fragment_running" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.project_cs426_runningapp.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/achievementsFragment"
        android:name="com.example.project_cs426_runningapp.AchievementsFragment"
        android:label="fragment_achievements"
        tools:layout="@layout/fragment_achievements" />
    <fragment
        android:id="@+id/dontKnowFragment"
        android:name="com.example.project_cs426_runningapp.EventFragment"
        android:label="fragment_dont_know"
        tools:layout="@layout/fragment_event" />
    <fragment
        android:id="@+id/logInFragment"
        android:name="com.example.project_cs426_runningapp.LogInFragment"
        android:label="fragment_log_in"
        tools:layout="@layout/fragment_log_in">
        <action
            android:id="@+id/action_logInFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_logInFragment_to_achievementsFragment"
            app:destination="@id/achievementsFragment" />
        <action
            android:id="@+id/action_logInFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_logInFragment_to_dontKnowFragment"
            app:destination="@id/dontKnowFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.project_cs426_runningapp.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_registerFragment_to_achievementsFragment"
            app:destination="@id/achievementsFragment" />
        <action
            android:id="@+id/action_registerFragment_to_profileFragment"
            app:destination="@id/profileFragment" />
        <action
            android:id="@+id/action_registerFragment_to_dontKnowFragment"
            app:destination="@id/dontKnowFragment" />
    </fragment>
</navigation>